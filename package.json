{
  "name": "pushups",
  "version": "1.0.0",
  "description": "A web application for tracking daily pushups and maintaining streaks",
  "main": "dist/server.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.js --env production",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "pm2 start ecosystem.config.js --watch && pm2 logs",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm install && npm run build",
    "build:server": "tsc",
    "start:prod": "node dist/server.js",
    "stop": "pm2 stop pushup-tracker",
    "restart": "pm2 restart pushup-tracker",
    "logs": "pm2 logs pushup-tracker",
    "monitor": "pm2 monit pushup-tracker"
  },
  "keywords": [
    "fitness",
    "tracking",
    "pushups",
    "workout"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^18.15.11",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "typescript": "^5.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.1",
    "ts-node": "^10.9.1"
  }
}
